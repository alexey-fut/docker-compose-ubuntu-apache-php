FROM blackjack777/ubuntu-apache-php:1.2

########################################################################################################################
### Create vhost and disable the default one
########################################################################################################################
ADD ./template/vhost-application.conf /etc/apache2/sites-available/application.conf
RUN a2ensite application
RUN a2dissite 000-default

########################################################################################################################
### Set and overwrite default php settings
########################################################################################################################
COPY ./template/php.ini /etc/php5/apache2/php.ini

########################################################################################################################
#### Configure xdebug extension
########################################################################################################################
COPY ./template/xdebug.ini /etc/php5/mods-available/xdebug.ini